version: '3.9'

services:
  {{ app_name }}:
    build: .
    container_name: {{ app_name }}
    restart: always
    environment:
      - NODE_ENV=production
      - PORT=3000
      - HOSTNAME=0.0.0.0
      - DATABASE_URL=mysql://{{ db_user }}:{{ db_password }}@{{ shared_mysql_container }}:3306/{{ db_name }}
      - REDIS_URL=redis://{{ shared_redis_container }}:6379
    networks:
      - {{ network }}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ app_name }}.rule=Host(`{{ domain }}`)"
      - "traefik.http.routers.{{ app_name }}.entrypoints=websecure"
      - "traefik.http.routers.{{ app_name }}.tls.certresolver=mytls"
      - "traefik.http.services.{{ app_name }}.loadbalancer.server.port=3000"

networks:
  {{ network }}:
    external: true
